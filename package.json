{
  "name": "cogix-browser-plugin",
  "displayName": "Cogix Eye Tracking",
  "version": "1.0.0",
  "description": "Eye tracking, screen recording, and event capture for research",
  "author": "Cogix",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "package:crx": "powershell -ExecutionPolicy Bypass -File create-crx.ps1",
    "package:all": "npm run build && npm run package && npm run package:crx"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.31",
    "@iris-point/eye-tracking-core": "file:../..",
    "@plasmohq/storage": "^1.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "plasmo": "^0.90.5",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "$CLERK_FRONTEND_API/*",
      "https://cogix-data-io.workers.dev/*",
      "https://data-io.cogix.app/*"
    ]
  }
}
