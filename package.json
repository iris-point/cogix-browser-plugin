{
  "name": "cogix-browser-plugin",
  "displayName": "Cogix Eye Tracking",
  "version": "1.0.0",
  "description": "Eye tracking, screen recording, and event capture for research",
  "author": "Cogix",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.31",
    "@iris-point/eye-tracking-core": "file:../..",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@plasmohq/storage": "^1.13.0",
    "@types/chrome": "^0.0.251",
    "@types/node": "20.11.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "plasmo": "^0.90.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.2"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "activeTab",
      "scripting",
      "desktopCapture"
    ],
    "host_permissions": [
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "$CLERK_FRONTEND_API/*",
      "https://cogix-data-io.workers.dev/*",
      "https://data-io.cogix.app/*"
    ]
  }
}
