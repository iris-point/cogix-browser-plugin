{
  "manifest_version": 3,
  "name": "Cogix Eye Tracking Recorder",
  "version": "1.0.0",
  "description": "Record eye tracking data on any website and sync with your Cogix workspace",
  "author": "Cogix Team",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "cookies"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:8000/*",
    "http://localhost:8001/*",
    "https://*.cogix.app/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Click to start eye tracking recording"
  },
  
  "options_page": "options/index.html",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "content/*",
        "overlay/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}